import java.util.*;
public class SnacksDetails{
    public static void main(String args[]){
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter the no of pizzas bought:");
        int piz=sc.nextInt();
        System.out.println("Enter the no of puffs bought:");
        int puf=sc.nextInt();
        System.out.println("Enter the no of cool drinks bought:");
        int cool=sc.nextInt();
        int rate=(piz*100)+(puf*20)+(cool*10);
        System.out.println("Bill Details");
        System.out.println("No of pizzas:"+piz);
        System.out.println("No of puffs:"+puf);
        System.out.println("No of cooldrinks:"+cool);
        System.out.println("Total price="+rate);
        System.out.println("ENJOY THE SHOW!!!");
    }
}
